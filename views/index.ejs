<%- include('./partials/header') %>

<main class="container">
  <h1 class="title">THE BLOGS</h1>

  <section>
    <% for(let i of blogs){ %>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= i.blogTitle %></h5>
        <p class="card-text"><%= i.username %></p>
        <a href="/blogs/<%= i.id %>" class="card-link">View</a>
        <a href="/blogs/<%= i.id %>/edit" class="card-link">Edit</a>
        <form
          class="d-inline-block card-link"
          action="/blogs/<%= i.id %>/?_method=DELETE"
          method="POST"
        >
          <button type="submit" class="btn btn-sm btn-danger">Delete</button>
        </form>
      </div>
    </div>
    <% } %>
  </section>
</main>

<%- include('./partials/footer') %>
